{
  "name": "ES6-web-app-boilerplate",
  "version": "1.0.0",
  "description": "ES6 web application boilerplate with webpack & linter",
  "main": "index.js",
  "author": "Levan Tskipuri",
  "license": "MIT",
  "scripts": {
    "build": "node tools/build.js",
    "start": "node tools/dev-server.js",
    "lint": "eslint **/*.{js} --quiet",
    "postbuild": "node tools/dist-server.js",
    "update:packages":
      "node tools/wipe-dependencies.js && rm -rf node_modules & npm update --save-dev & npm update --save"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-loader": "^7.1.2",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-dynamic-import-webpack": "^1.0.2",
    "babel-plugin-import": "^1.6.3",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "chalk": "^2.3.0",
    "compression": "^1.7.1",
    "css-loader": "^0.28.7",
    "eslint": "^4.14.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.4.0",
    "express": "^4.16.2",
    "extract-text-webpack-plugin": "^3.0.2",
    "fs-extra": "^5.0.0",
    "html-webpack-plugin": "^2.30.1",
    "node-sass": "^4.7.2",
    "open": "0.0.5",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^2.0.3",
    "webpack-hot-middleware": "^2.21.0"
  }
}
